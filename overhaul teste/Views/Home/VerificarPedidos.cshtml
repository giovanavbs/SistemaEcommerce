@model List<overhaul_teste.Models.Pedido>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todos os Pedidos</title>
    <link rel="stylesheet" href="/src/css/style.css">
    <style>
        body {
            background-color: #202020;
        }
        .todos-carros {
            background-color: #202020;
            color: #eee;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .carros {
            width: 90%;
            max-width: 1600px;
            background-color: #2d2d2d;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            margin-top: 30px;
        }
        .carros h2 {
            text-align: center;
            color: #ddd;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        thead {
            background-color: #444444;
        }
        th, td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #555;
        }
        th {
            color: #ccc;
            font-weight: bold;
        }
        tbody tr:hover {
            background-color: #444;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        /*media (max-width: 600px) {
            th, td {
                padding: 8px 5px;
                font-size: 14px;
            }*/
        }
    </style>
</head>
<body>

    <section class="todos-carros">
        <div class="carros">
            <h2>Todos os Pedidos</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID Pedido</th>
                        <th>Cliente</th>
                        <th>Data do Pedido</th>
                        <th>Valor Total</th>
                        <th>Status</th>
                        <th>Itens</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grupoPedido in Model.GroupBy(p => p.IdPedido))
                    {
                        var pedido = grupoPedido.First();

                        <tr>
                            <td>@pedido.IdPedido</td>
                            <td>@pedido.NomeCliente @pedido.SobrenomeCliente</td>
                            <td>@pedido.DataPedido.ToShortDateString()</td>
                            <td>@pedido.ValorTotal.ToString("C")</td>
                            <td>@pedido.StatusPedido</td>
                            <td>
                                <ul>
                                    @foreach (var item in grupoPedido.SelectMany(p => p.Itens))
                                    {
                                        <li>@item.Marca @item.Modelo - @item.Quantidade x @item.PrecoUnitario.ToString("C")</li>
                                    }
                                </ul>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</body>
</html>
