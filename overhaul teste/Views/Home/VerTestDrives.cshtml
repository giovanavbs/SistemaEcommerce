@model List<overhaul_teste.Models.TestDrive>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test Drives do Cliente</title>
    <link rel="stylesheet" href="/src/css/style.css">
    <style>
        body {
            background-color: #202020;
        }
        .todos-carros {
            background-color: #202020;
            color: #eee;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .carros {
            width: 90%;
            max-width: 1600px;
            background-color: #2d2d2d;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            margin-top: 30px;
        }
        .carros h2 {
            text-align: center;
            color: #ddd;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        thead {
            background-color: #444444;
        }
        th, td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #555;
        }
        th {
            color: #ccc;
            font-weight: bold;
        }
        tbody tr:hover {
            background-color: #444;
        }
        /*media (max-width: 600px) {
            th, td {
                padding: 8px 5px;
                font-size: 14px;
            }*/
        }
    </style>
</head>
<body>

    <section class="todos-carros">
        <div class="carros">
            <h2>Test Drives do Cliente</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>CPF/CNPJ</th>
                        <th>Modelo</th>
                        <th>Marca</th>
                        <th>Ano</th>
                        <th>Data do Test Drive</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var testDrive in Model)
                    {
                        <tr>
                            <td>@testDrive.IdTest</td>
                            <td>@testDrive.ClienteNome</td>
                            <td>@testDrive.ClienteCpf</td>
                            <td>@testDrive.ModeloCarro</td>
                            <td>@testDrive.MarcaCarro</td>
                            <td>@testDrive.AnoCarro</td>
                            <td>@testDrive.DataTest.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@testDrive.StatusTest</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</body>
</html>
