            margin: 5px 0;
        }

    .endereco {
        background-color: #2D2D2D;
        padding: 20px;
        border-radius: 8px;
        color: #fff;
        margin-top: 20px;
        max-width: 400px;
    }

        .endereco p {
            color: #fff;
        }

    .item-info p {
        color: #fff;
    }

    #dataEntrega {
        color: #FFD700;
    }

    .info-resumo-pedido p {
        color: #fff;
    }

    .container-resumo-pedido {
        background-color: #2d2d2d;
        box-shadow: 2px 2px 5px rgba(192, 192, 192, 0.5);
        width: 30%;
        padding: 10px;
        /*! height: max-content; */
        border-radius: 10px;
        margin-top: 80px;
        /*! margin-left: 200px; */
    }

    .container-finalizar-pedido {
        display: flex;
        flex-direction: column;
        justify-content: center;
        /*! align-items: center; */
        /*! width: 90%; */
        /*! margin-top: 10px; */
        /*! background-color: aqua; */
